% layout 'default';
% title 'Dashboard';

<div class="row">
    <div class="span2">
        <h3>last 10 notifies</h3>
    </div>
    <div class="span10">
        <% foreach my $notify (@{$notifies}) { %>
        <p class="text-info">
        <%= $notify->{message} %>
        </p>
        <span class="label label-info"><%= get_name($notify->{source}) %></span>
        <small><%= format_time($notify->{recv_at}) %></small>
        <hr>
        <% } %>
    </div>
</div>
